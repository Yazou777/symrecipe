{% extends 'base.html.twig' %}

{% block title %}Recipe{% endblock %}

{% block body %}
    <h1>Recipe</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ recipe.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ recipe.name }}</td>
            </tr>
            <tr>
                <th>Time</th>
                <td>{{ recipe.time }}</td>
            </tr>
            <tr>
                <th>NbPeople</th>
                <td>{{ recipe.nbPeople }}</td>
            </tr>
            <tr>
                <th>Difficulty</th>
                <td>{{ recipe.difficulty }}</td>
            </tr>
                <th>Ingredients</th>
                {% for ingredient in recipe.ingredients %}
                <td class="badge bg-primary ">{{ingredient.name }}</td>
                {% endfor %}
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ recipe.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ recipe.price }}</td>
            </tr>
            <tr>
                <th>IsFavorite</th>
                <td>{{ recipe.isFavorite ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ recipe.createdAt ? recipe.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdateAt</th>
                <td>{{ recipe.updateAt ? recipe.updateAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            
         
        </tbody>
    </table>

       <div>
            <img style ="max-width: 500px;" src="{{ vich_uploader_asset(recipe, 'imageFile') }}">
            </div>

    <a href="{{ path('app_recipe_index') }}">back to list</a>

    <a href="{{ path('app_recipe_edit', {'id': recipe.id}) }}">edit</a>

    {{ include('recipe/_delete_form.html.twig') }}
{% endblock %}
