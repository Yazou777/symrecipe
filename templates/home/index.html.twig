{% extends 'base.html.twig' %}

{% block title %}Symrecipe - Accueil{% endblock %}

{% block body %}
<div class="container mt-4">
<div class="jumbotron">
  <h1 class="display-4">Bienvenue sur SymRecipe</h1>
  <p class="lead">Symrecipe une application de rectte de cuisine</p>
  <hr class="my-4">
  <p>Inscrit toi pour utiliser l'application.</p>
  <a class="btn btn-primary btn-lg" href="#" role="button">Inscription</a>
</div>



 <h1>Recettes Public</h1>


    <table class="table table-hover ">
        <thead>
            <tr class="table-dark">
                <th>Id</th>
                <th>Name</th>
                <th>Time</th>
                <th>NbPeople</th>
                <th>Difficulty</th>
                <th>Description</th>
                <th>Price</th>
                <th>IsFavorite</th>
                <th>CreatedAt</th>
                <th>UpdateAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for recipe in recipes %}
            <tr class="table-secondary">
                <td>{{ recipe.id }}</td>
                <td>{{ recipe.name }}</td>
                <td>{{ recipe.time }}</td>
                <td>{{ recipe.nbPeople }}</td>
                <td>{{ recipe.difficulty }}</td>
                <td>{{ recipe.description }}</td>
                <td>{{ recipe.price }}</td>
                <td>{{ recipe.isFavorite ? 'Yes' : 'No' }}</td>
                <td>{{ recipe.createdAt ? recipe.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ recipe.updateAt ? recipe.updateAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_recipe_show', {'id': recipe.id}) }}">show</a>
                    <a href="{{ path('app_recipe_edit', {'id': recipe.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

  </div>
{% endblock %}
